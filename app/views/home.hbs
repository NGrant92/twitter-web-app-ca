{{> mainmenu _id="home" }}

<div class="ui equal width padded grid">
  <div class = "four wide column">
    {{> profilecard}}
  </div>

  <div class = "eight wide align right column">
    {{> tweet }}

    <section class="ui segment" id="timelineTabs" style=overflow:auto;max-height:1200px;min-height:200px;">
      <h3 class="ui dividing header">Timeline</h3>
      <div class="ui pointing secondary demo menu">
        <a class="item" data-tab="first"><i class="users icon"></i>All Tweets</a>
        <a class="active item" data-tab="second"><i class="user icon"></i>My Tweets</a>
      </div>

      <div class="ui tab" data-tab="first" style="padding: 10px;">{{> alltweets}}</div>
      <div class="ui active tab" data-tab="second" style="padding: 10px;">{{> mytweets}}</div>
    </section>
  </div>

  <div class = "four wide align right column padded">
    <section class="ui raised segment">
      {{> userlist }}
    </section>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.menu .item').tab({history:false});
  });
</script>
