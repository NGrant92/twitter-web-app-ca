<div class="ui accordion">
  <div class="title">
    <i class = "add user icon"></i> Add User <i class="dropdown icon" style="float:right;"></i>
  </div>
  <div class="content">
    <div class="ui fluid form ">
      <form action="/register/{{user.admin}}" method="POST">
        <div class="field">
          <label>First Name</label>
          <input placeholder="First Name" type="text" name="firstName" value="Lisa">
        </div>
        <div class="field">
          <label>Last Name</label>
          <input placeholder="Last Name" type="text" name="lastName" value="Simpson">
        </div>
        <div class="field">
          <label>Email</label>
          <input placeholder="Email" type="text" name="email" value="lisa@simpson.com">
        </div>
        <div class="field">
          <label>Password</label>
          <input type="password" name="password" value="secret">
        </div>
        <button class="ui blue icon button"><i class="add user icon"></i> Add</button>
      </form>
      {{> formerror }}
    </div>
  </div>
</div>
<script>
  $('.ui.accordion')
      .accordion()
  ;

  $('.trigger.example .accordion')
      .accordion({
        selector: {
          trigger: '.title .icon'
        }
      })
  ;
</script>

